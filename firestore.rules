rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function for Admin or Super Employee
    function isStaff() {
      return request.auth.token.email == "chirag@theawakens.com" 
          || request.auth.token.email == "jayesh@theawakens.com";
    }

    match /punches/{docId} {
      // Admin, Quake, AND Employees: Full Access (Read, Write, Update)
      // User requested "upload all data of csv like in the admin dashboard"
      // This allows any authenticated user to write ANY punch record.
      allow read, write: if request.auth != null; 
    }
    
    match /requests/{requestId} {
      // Staff can read/write (approve/reject/view all)
      allow read, write: if request.auth != null && isStaff();
      
      // Employees can create requests for themselves
      allow create: if request.auth != null 
        && request.auth.token.email == request.resource.data.email;
        
      // Employees can read their own requests (to see status)
      allow read: if request.auth != null 
        && request.auth.token.email == resource.data.email;
    }

    match /holidays/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isStaff();
    }

    match /Salary/{docId} {
      allow read, write: if request.auth != null && isStaff();
    }

    match /Incentives/{docId} {
      allow read, write: if request.auth != null;
    }

    match /payroll_adjustments/{docId} {
      allow read, write: if request.auth != null;
    }

    match /chats/{chatId}/{document=**} {
      allow read, write: if request.auth != null;
    }

    match /employees/{docId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && isStaff();
    }
  }
}
